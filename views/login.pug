extends layout

block content
	.main.container
		.row
			.col-md-5
				h1.display-4.m-b-2 Log In
				form(method='POST' action='/login')
					div.form-group
						label(for='email') Email
						input.form-control(type='text' id='email' placeholder='email' name='email')
					div.form-group
						label(for='password') Password
						input.form-control(type='password' id='password' placeholder='password' name='password')
					button.btn.btn-primary(type='submit') Log In
			.col-md-6.col-md-offset-1
				h1.display-4.m-b-2 Log In
				h1 Social Media Logins
				p
					a(href="/auth/login/github" class="btn btn-primary") Github
					|  or 
					a(href="/auth/login/facebook" class="btn btn-primary") Facebook
